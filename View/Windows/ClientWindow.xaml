<Window x:Class="CourseWork_SAIPIS.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork_SAIPIS"
        mc:Ignorable="d"
        Title="ClientWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="359*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="InvoiceGrid" HorizontalAlignment="Left" Height="335" Margin="10,10,0,0" VerticalAlignment="Top" Width="772"/>
        <Button Content="Добавить ТТН" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="722" Height="40" Click="ButtonBase_OnClick" FontSize="16"/>
        <Button x:Name="UpdateButton" HorizontalAlignment="Left" Margin="737,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="45" Height="40" Click="UpdateButton_OnClick" >
            <Button.Background>
                <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/update.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>




    </Grid>
</Window>
